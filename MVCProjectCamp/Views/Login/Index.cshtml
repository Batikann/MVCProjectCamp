
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Sözlük Admin Giriş Sayfası</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/Template/adminlogintemplate/css/style.css">

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Sözlük Admin Girişi</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap py-5">
                        <div class="img d-flex align-items-center justify-content-center" style="background-image: url(/Template/adminlogintemplate/images/bg.jpg);"></div>
                        <h3 class="text-center mb-0">Hoşgeldiniz</h3>
                        <p class="text-center">Lütfen Bilgilerinizi Doğru Bir Şekilde Kutucuklara Giriniz.</p>
                        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                        {
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-user"></span></div>
                                <input type="text" class="form-control" placeholder="Eposta" name="AdminMail" required>
                            </div>
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-lock"></span></div>
                                <input type="password" class="form-control" name="AdminPassword" placeholder="Şifre" required>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-100 text-md-right">
                                    <a href="#">Şifremi Unuttum</a>
                                </div>
                            </div>
                            if (ViewBag.ErrorMessage != null)
                            {
                                <div class="text-center" style="margin-bottom:15px">
                                    <a class="text-gray-dark">
                                        @ViewBag.ErrorMessage
                                    </a>
                                </div>
                            }
                            <div class="form-group">
                                <button type="submit" class="btn form-control btn-primary rounded submit px-3">Giriş</button>
                            </div>
                        }
                        <div class="w-100 text-center mt-4 text">
                            <a href="#">Ana sayfaya Dön</a>
                            <br />
                            <a href="/Register/Register">Hesap Oluştur</a>
                        </div>
                    </div>
                </div>
            </div>
    </section>

    <script src="~/Template/adminlogintemplate/js/jquery.min.js"></script>
    <script src="~/Template/adminlogintemplate/js/popper.js"></script>
    <script src="~/Template/adminlogintemplate/js/bootstrap.min.js"></script>
    <script src="~/Template/adminlogintemplate/js/main.js"></script>

</body>
</html>

