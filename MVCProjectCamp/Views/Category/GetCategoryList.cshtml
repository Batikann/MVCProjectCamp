@model  List<EntityLayer.Concrete.Category>
@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<table class="table table-bordered table-striped">
    <tr>
        <th>ID</th>
        <th>Kategori İsmi</th>
        <th>Kategori Detayı</th>
        <th>Kategori Durumu</th>
        <th>Kategori Güncelle</th>
        <th>Kategori Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td>@item.CategoryDescription</td>
            <td>@item.CategoryStatus</td>
            <td><a href="#" class="btn btn-warning">Güncelle</a></td>
            <td><a href="#" class="btn btn-danger">Sil</a></td>

        </tr>
    }
</table>

<div>
    <a href="/Category/AddCategory/" class="btn btn-info">Yeni Kategori Ekle</a>
</div>
