@model List<EntityLayer.Concrete.Content>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title>Timeless One-Page HTML Template</title>
    <!--

    Timeless Template

    http://www.templatemo.com/tm-517-timeless

    -->
    <!-- load CSS -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400">
    <!-- Google web font "Open Sans" -->
    <link rel="stylesheet" href="~/Template/timelesstemplate/css/bootstrap.min.css">
    <!-- https://getbootstrap.com/ -->
    <link rel="stylesheet" href="~/Template/timelesstemplate/css/templatemo-style.css">
    <!-- Templatemo style -->
</head>

<body>
    <br />
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-lg-12">
                <div class=" tm-timeline-item">
                    <div class="tm-timeline-item-inner">
                        <div>
                            <div class="tm-bg-dark tm-timeline-description">
                                <h3 class="tm-text-green tm-font-400">@item.Heading.HeadingName</h3>
                                <p>@item.ContentValue.</p>
                                <p class="tm-text-green float-right mb-0">@item.Writer.WriterUserName---@(((DateTime) item.ContentDate).ToString("dd-MMM-yyyy"))</p>
                            </div>
                        </div>
                    </div>
                    <br />
                </div>
            </div>
        </div>
    }



    <script src="~/Template/timelesstemplate/js/jquery.min.js"></script>
    <!-- <script src="js/jquery-3.2.1.slim.min.js"></script> -->
    <script src="~/Template/timelesstemplate/js/templatemo-script.js"></script>

</body>
</html>
